# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,rst,ini}]
max_line_length = 79
indent_style = space
indent_size = 4

[*.html]
indent_size=2

[*.{css,scss,json,yml,xml,toml}]
indent_style = space
indent_size = 4

[**/admin/js/vendor/**]
indent_style = ignore
indent_size = ignore

[**.min.js]
indent_style = ignore
indent_size = ignore

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{yaml,yml}]
indent_size = 2

[default.conf]
indent_style = space
indent_size = 4

[nginx.conf]
indent_style = space
indent_size = 2

