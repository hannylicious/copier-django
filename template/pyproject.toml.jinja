[project]
name = "{{ project_slug }}"
version = "{{ version }}"
description = "{{ description }}"
readme = "README.md"

license = { text = "{{ open_source_license }}" }
authors = [
  { name = "{{ author_name }}", email = "{{ email }}" },
]
requires-python = "==3.12.*"

# Base dependencies (formerly requirements/base.txt)
