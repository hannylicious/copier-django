#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

{%- if database == 'Postgresql' %}
if [ -z "${POSTGRES_USER}" ]; then
    base_postgres_image_default_user='postgres'
    export POSTGRES_USER="${base_postgres_image_default_user}"
fi
export DATABASE_URL="postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"

wait-for-it "${POSTGRES_HOST}:${POSTGRES_PORT}" -t 30
{%- elif database == 'Microsoft SQL' %}
if [ -z "${MSSQL_USER}" ]; then
    printf "ERROR: MSSQL_USER is not set. Please set the MSSQL_USER environment variable.\n" >&2
    exit 1
fi
export DATABASE_URL="mssql://${MSSQL_USER}:${MSSQL_PASSWORD}@${MSSQL_HOST}:${MSSQL_PORT}/${MSSQL_DB}?driver=ODBC+Driver+18+for+SQL+Server&extra_params='Encrypt=yes;TrustServerCertificate=yes;'"

wait-for-it "${MSSQL_HOST}:${MSSQL_PORT}" -t 30
{%- endif %}

>&2 echo 'Database is available'

exec "$@"
