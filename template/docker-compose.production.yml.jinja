volumes:
  {% if database == 'Postgresql' %}
  production_postgres_data: {}
  production_postgres_data_backups: {}
  {% elif database == 'Microsoft SQL' %}
  production_mssql_data: {}
  {% endif %}
  production_traefik: {}
  {%- if cloud_provider == 'None' %}
  production_django_media: {}
  {%- endif %}
  {% if use_celery %}
  production_redis_data: {}
  {% endif %}

services:
  django:{% if use_celery %} &django{% endif %}
    build:
      context: .
      dockerfile: ./compose/production/django/Dockerfile
      {%- if frontend_pipeline == 'Webpack' and not use_whitenoise %}
      args:
        # These variable can be defined in an .env file in the root of the repo
        {%- if cloud_provider == 'AWS' %}
        DJANGO_AWS_STORAGE_BUCKET_NAME: ${DJANGO_AWS_STORAGE_BUCKET_NAME}
        DJANGO_AWS_S3_CUSTOM_DOMAIN: ${DJANGO_AWS_S3_CUSTOM_DOMAIN}
        {%- elif cloud_provider == 'GCP' %}
        DJANGO_GCP_STORAGE_BUCKET_NAME: ${DJANGO_GCP_STORAGE_BUCKET_NAME}
        {%- elif cloud_provider == 'Azure' %}
        DJANGO_AZURE_ACCOUNT_NAME: ${DJANGO_AZURE_ACCOUNT_NAME}
        {%- endif %}
      {%- endif %}

    image: {{ project_slug }}_production_django
    {%- if cloud_provider == 'None' %}
    volumes:
      - production_django_media:/app/{{ project_slug }}/media
    {%- endif %}
    depends_on:
      {%- if database == 'Postgresql' %}
      postgres:
        condition: service_healthy
      {%- elif database == 'Microsoft SQL' %}
      mssql:
        condition: service_healthy
      {%- endif %}
      redis:
        condition: service_started
    env_file:
      - ./.envs/.production/.django
      - ./.envs/.production/.database
    command: /start

  {% if database == 'Postgresql' %}
  postgres:
    build:
      context: .
      dockerfile: ./compose/production/postgres/Dockerfile
    image: {{ project_slug }}_production_postgres
    volumes:
      - production_postgres_data:/var/lib/postgresql{% if postgresql_version < 18 %}/data{% endif %}
      - production_postgres_data_backups:/backups
    env_file:
      - ./.envs/.production/.database
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER"]
      interval: 10s
      timeout: 30s
      retries: 6
      start_period: 30s

  {% elif database == 'Microsoft SQL' %}
  mssql:
    image: mcr.microsoft.com/mssql/server:{{mssql_version}}-latest
    volumes:
      - production_mssql_data:/var/opt/mssql
    healthcheck:
      test: [ "CMD-SHELL", "/opt/mssql-tools18/bin/sqlcmd -S localhost -U sa -P $$MSSQL_SA_PASSWORD -C -Q 'SELECT 1'" ]
      interval: 10s
      timeout: 30s
      retries: 6
      start_period: 30s
    env_file:
      - ./.envs/.production/.database

  {% endif %}

  traefik:
    build:
      context: .
      dockerfile: ./compose/production/traefik/Dockerfile
    image: {{ project_slug }}_production_traefik
    depends_on:
      django:
        condition: service_started
    volumes:
      - production_traefik:/etc/traefik/acme
    ports:
      - '80:80'
      - '443:443'
      {%- if use_celery %}
      - '5555:5555'
      {%- endif %}

  redis:
    image: docker.io/redis:6
    {% if use_celery %}
    volumes:
      - production_redis_data:/data
    {% endif %}


  {%- if use_celery %}

  celeryworker:
    <<: *django
    image: {{ project_slug }}_production_celeryworker
    command: /start-celeryworker

  celerybeat:
    <<: *django
    image: {{ project_slug }}_production_celerybeat
    command: /start-celerybeat

  flower:
    <<: *django
    image: {{ project_slug }}_production_flower
    command: /start-flower
  {%- endif %}
  {%- if cloud_provider == 'AWS' %}

  awscli:
    build:
      context: .
      dockerfile: ./compose/production/aws/Dockerfile
    env_file:
      - ./.envs/.production/.django
    volumes:
      - production_postgres_data_backups:/backups:z
  {%- endif %}
  {%- if cloud_provider == 'None' %}

  nginx:
    build:
      context: .
      dockerfile: ./compose/production/nginx/Dockerfile
    image: {{ project_slug }}_production_nginx
    depends_on:
      django:
        condition: service_started
    volumes:
      - production_django_media:/usr/share/nginx/media:ro
  {%- endif %}
