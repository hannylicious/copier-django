volumes:
  {% if database == 'Postgresql' %}
  {{ project_slug }}_local_postgres_data: {}
  {{ project_slug }}_local_postgres_data_backups: {}
  {% elif database == 'Microsoft SQL' %}
  {{ project_slug }}_local_mssql_data: {}
  {% endif %}
  {% if use_celery %}{{ project_slug }}_local_redis_data: {}{% endif %}

services:
  django:{% if use_celery %} &django{% endif %}
    build:
      context: .
      dockerfile: ./compose/local/django/Dockerfile
    image: {{ project_slug }}_local_django
    container_name: {{ project_slug }}_local_django
    depends_on:
      {%- if database == 'Postgresql' %}
      postgres:
        condition: service_healthy
      {%- elif database == 'Microsoft SQL' %}
      mssql:
        condition: service_healthy
      {%- endif %}
      {%- if use_celery %}
      redis:
        condition: service_started
      {%- endif %}
      {%- if use_mailpit %}
      mailpit:
        condition: service_started
      {%- endif %}
    volumes:
      - /app/.venv
      - .:/app:z
    env_file:
      - ./.envs/.local/.django
      - ./.envs/.local/.database
    ports:
      - '8000:8000'
    command: /start

  {% if database == 'Postgresql' %}
  postgres:
    build:
      context: .
      dockerfile: ./compose/production/postgres/Dockerfile
    image: {{ project_slug }}_production_postgres
    container_name: {{ project_slug }}_local_postgres
    volumes:
      - {{ project_slug }}_local_postgres_data:/var/lib/postgresql{% if postgresql_version < 18 %}/data{% endif %}
      - {{ project_slug }}_local_postgres_data_backups:/backups
    env_file:
      - ./.envs/.local/.database
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s

  {% elif database == 'Microsoft SQL' %}
  mssql:
    image: mcr.microsoft.com/mssql/server:{{mssql_version}}-latest
    container_name: {{ project_slug }}_local_mssql
    {% if mssql_version < 2020 %}
    command: /bin/bash -c "/opt/mssql/bin/sqlservr & /usr/local/bin/init-db.sh && wait"
    {% endif %}
    volumes:
      - {{ project_slug }}_local_mssql_data:/var/opt/mssql
      - {{ project_slug }}_local_mssql_data_backups:/backups
      {% if mssql_version < 2020 %}
      - ./compose/local/mssql/init-db.sh:/usr/local/bin/init-db.sh:ro
      {% endif %}
    env_file:
      - ./.envs/.local/.database
    healthcheck:
      test: [ "CMD-SHELL", "/opt/mssql-tools18/bin/sqlcmd -S localhost -U sa -P $$MSSQL_SA_PASSWORD -C -Q 'SELECT 1'" ]
      interval: 10s
      timeout: 30s
      retries: 6
      start_period: 30s

  {% endif %}
  {%- if use_mailpit %}

  mailpit:
    image: docker.io/axllent/mailpit:latest
    container_name: {{ project_slug }}_local_mailpit
    ports:
      - "8025:8025"

  {%- endif %}
  {%- if use_celery %}

  redis:
    image: docker.io/redis:6
    container_name: {{ project_slug }}_local_redis
    volumes:
      - {{ project_slug }}_local_redis_data:/data

  celeryworker:
    <<: *django
    image: {{ project_slug }}_local_celeryworker
    container_name: {{ project_slug }}_local_celeryworker
    depends_on:
      redis:
        condition: service_started
      {%- if database == 'Postgresql' %}
      postgres:
        condition: service_healthy
      {%- elif database == 'Microsoft SQL' %}
      mssql:
        condition: service_healthy
      {%- endif %}
      {%- if use_mailpit %}
      mailpit:
        condition: service_started
      {%- endif %}
    ports: []
    command: /start-celeryworker

  celerybeat:
    <<: *django
    image: {{ project_slug }}_local_celerybeat
    container_name: {{ project_slug }}_local_celerybeat
    depends_on:
      redis:
        condition: service_started
      {%- if database == 'Postgresql' %}
      postgres:
        condition: service_healthy
      {%- elif database == 'Microsoft SQL' %}
      mssql:
        condition: service_healthy
      {%- endif %}
      {%- if use_mailpit %}
      mailpit:
        condition: service_started
      {%- endif %}
    ports: []
    command: /start-celerybeat

  flower:
    <<: *django
    image: {{ project_slug }}_local_flower
    container_name: {{ project_slug }}_local_flower
    ports:
      - '5555:5555'
    command: /start-flower

  {%- endif %}
  {%- if frontend_pipeline in ['Gulp', 'Webpack'] %}

  node:
    build:
      context: .
      dockerfile: ./compose/local/node/Dockerfile
    image: {{ project_slug }}_local_node
    container_name: {{ project_slug }}_local_node
    depends_on:
      django:
        condition: service_started
    volumes:
      - .:/app:z
      # http://jdlm.info/articles/2016/03/06/lessons-building-node-app-docker.html
      - /app/node_modules
    command: npm run dev
    ports:
      - '3000:3000'
      {%- if frontend_pipeline == 'Gulp' %}
      # Expose browsersync UI: https://www.browsersync.io/docs/options/#option-ui
      - '3001:3001'
      {%- endif %}

  {%- endif %}
